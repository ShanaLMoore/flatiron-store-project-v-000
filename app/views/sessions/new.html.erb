<div class="login">
  <div class="container">
    <div class="form">
      <h1>Login</h1>

      <%= form_for @user, url: login_path, method: :post do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email, :placeholder => "Email" %>

        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => "Password" %>

        <%= f.submit "log in", class: "btn-submit" %>
      <% end %>
    </div>
  </div>
</div>